<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.udacity.catchup.ui.CircleImageView
        android:id="@+id/circleIV"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/circleIV"
        app:layout_constraintStart_toEndOf="@id/circleIV"
        app:layout_constraintTop_toTopOf="@id/circleIV">

        <TextView
            android:id="@+id/subredditName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/icon_margin"
            android:layout_marginLeft="@dimen/icon_margin"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/subredditNameOnCard_textSize"
            app:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/postDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/icon_margin"
            android:layout_marginLeft="@dimen/icon_margin"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/postDetails_textSize" />
    </LinearLayout>
</merge>